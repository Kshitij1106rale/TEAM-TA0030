/**
 * Core Philosophy:
 * This ruleset enforces a strict, user-centric ownership model. All user-specific
 * data is segregated within a user's own data tree under `/users/{userId}`, ensuring
 * that a user can only ever access their own information.
 *
 * Data Structure:
 * The data is hierarchically organized under a top-level `/users` collection, with
 * each user's data nested under their unique UID (e.g., /users/{userId}/crops/{cropId}).
 * This structure inherently supports secure querying. A separate top-level collection,
 * `/marketPrices`, holds public data readable by all authenticated users.
 *
 * Key Security Decisions:
 * - User data is private by default. Access is restricted to the document owner.
 * - Listing of top-level user profiles (`/users`) is explicitly disallowed to prevent
 *   user enumeration.
 * - The `/marketPrices` collection is publicly readable by any authenticated user but
 *   cannot be modified by clients, securing it for backend-only writes.
 * - Destructive operations (update, delete) are only allowed on existing documents.
 *
 * Denormalization for Authorization:
 * To create simple, fast, and secure rules, this ruleset relies on denormalization.
 * Specifically, the `userId` is copied into every user-owned document (Crops,
 * Diagnoses, etc.). This avoids slow and costly `get()` calls in subcollection rules,
 * allowing for direct ownership checks like `resource.data.userId == request.auth.uid`.
 *
 * Structural Segregation:
 * User-private data (`/users/{userId}/...`) is kept entirely separate from public-read
 * data (`/marketPrices`). This segregation simplifies rules and makes list operations
*   inherently secure and performant.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the primary function for checking document ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the user is the owner AND the document already exists.
     * Used to protect all update and delete operations from acting on non-existent data.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Validates that the UserProfile being created has its internal 'id'
     * field correctly set to the user's auth UID.
     */
    function hasValidUserProfileDataOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    /**
     * Validates that the UserProfile's internal 'id' field remains unchanged on update.
     */
    function hasValidUserProfileDataOnUpdate() {
      return request.resource.data.id == resource.data.id;
    }

    /**
     * Validates that a user-owned document has its internal 'userId' field
     * correctly set to the user's auth UID on creation.
     */
    function hasValidOwnerFieldOnCreate(userId) {
      return request.resource.data.userId == userId;
    }

    /**
     * Validates that a user-owned document's internal 'userId' field remains
     * unchanged on update, preventing ownership transfer.
     */
    function hasImmutableOwnerField() {
      return request.resource.data.userId == resource.data.userId;
    }

    /**
     * Validates that a document nested under a crop has its internal `cropId`
     * and `userId` fields correctly set on creation.
     */
    function hasValidCropSubdocumentDataOnCreate(userId, cropId) {
      return request.resource.data.userId == userId
          && request.resource.data.cropId == cropId;
    }

    /**
     * Validates that a nested crop document's internal `cropId` and `userId`
     * fields remain unchanged on update.
     */
    function hasImmutableCropSubdocumentFields() {
      return request.resource.data.userId == resource.data.userId
          && request.resource.data.cropId == resource.data.cropId;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow A user (auth.uid=`user_abc`) creating their own profile (docId=`user_abc`). (create)
     * @deny A user (auth.uid=`user_xyz`) reading another user's profile (docId=`user_abc`). (get)
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && hasValidUserProfileDataOnCreate(userId);
      allow update: if isExistingOwner(userId) && hasValidUserProfileDataOnUpdate();
      allow delete: if isExistingOwner(userId);

      /**
       * @description Controls access to a user's crop documents.
       * @path /users/{userId}/crops/{cropId}
       * @allow A user (auth.uid=`user_abc`) listing their own crops. (list)
       * @deny A user (auth.uid=`user_xyz`) creating a crop under another user's path. (create)
       * @principle Enforces document ownership for all operations within a user-specific subcollection.
       */
      match /crops/{cropId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidOwnerFieldOnCreate(userId);
        allow update: if isExistingOwner(userId) && hasImmutableOwnerField();
        allow delete: if isExistingOwner(userId);

        /**
         * @description Controls access to AI crop diagnoses.
         * @path /users/{userId}/crops/{cropId}/diagnoses/{diagnosisId}
         * @allow A user (auth.uid=`user_abc`) creating a diagnosis for their own crop. (create)
         * @deny A user (auth.uid=`user_xyz`) reading a diagnosis for another user's crop. (get)
         * @principle Ensures data integrity by validating denormalized `userId` and `cropId` fields.
         */
        match /diagnoses/{diagnosisId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId) && hasValidCropSubdocumentDataOnCreate(userId, cropId);
          allow update: if isExistingOwner(userId) && hasImmutableCropSubdocumentFields();
          allow delete: if isExistingOwner(userId);
        }

        /**
         * @description Controls access to crop profit estimations.
         * @path /users/{userId}/crops/{cropId}/profitEstimates/{estimateId}
         * @allow A user (auth.uid=`user_abc`) updating an estimate for their own crop. (update)
         * @deny A user (auth.uid=`user_xyz`) deleting an estimate for another user's crop. (delete)
         * @principle Enforces strict ownership on deeply nested subcollections via denormalized IDs.
         */
        match /profitEstimates/{estimateId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId) && hasValidCropSubdocumentDataOnCreate(userId, cropId);
          allow update: if isExistingOwner(userId) && hasImmutableCropSubdocumentFields();
          allow delete: if isExistingOwner(userId);
        }
      }

      /**
       * @description Controls access to user-specific weather advisories.
       * @path /users/{userId}/weatherAdvisories/{advisoryId}
       * @allow A user (auth.uid=`user_abc`) reading an advisory intended for them. (get)
       * @deny A user (auth.uid=`user_xyz`) creating an advisory for another user. (create)
       * @principle Restricts access to documents based on the denormalized `userId` owner field.
       */
      match /weatherAdvisories/{advisoryId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidOwnerFieldOnCreate(userId);
        allow update: if isExistingOwner(userId) && hasImmutableOwnerField();
        allow delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description Controls access to global market price data.
     * @path /marketPrices/{marketPriceId}
     * @allow Any authenticated user reading or listing market prices. (get, list)
     * @deny Any client, authenticated or not, attempting to write data. (create, update, delete)
     * @principle Provides public read access for all authenticated users while prohibiting all client-side writes.
     */
    match /marketPrices/{marketPriceId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}